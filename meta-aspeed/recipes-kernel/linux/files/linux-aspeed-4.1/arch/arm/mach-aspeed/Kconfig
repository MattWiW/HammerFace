if ARCH_ASPEED

choice
        prompt "ASPEED Processor Family"
        default CONFIG_IRMP

config IRMP
        bool "IRMP Serials"

config PCEXT
	bool "PC Extender Serials"

config REMOTEFX
	bool "RemoteFX Zero-Client Serials"

endchoice

if IRMP

