	select CPU_ARM926T
        bool "AST1100"

config ARCH_AST2100
	select CPU_ARM926T
        bool "AST2100"

config ARCH_AST2200
	select CPU_ARM926T
        bool "AST2200"

config ARCH_AST2300
	select CPU_ARM926T
        bool "AST2300"

config ARCH_AST2400
	select CPU_ARM926T
	select USB_ARCH_HAS_EHCI
        bool "AST2400"

config ARCH_AST2500
#        select CPU_V6
	select USB_ARCH_HAS_EHCI
	select AST_UART_SDMA
	select EGFX_IRQ
        bool "AST2500"

endchoice

endif

